        <%#= form_for @User,url: auth_path, html: { method: :post,} do |f| %>
            <h1>Login Form</h1>
            <%= text_field_tag "username", '',class:'form-control',placeholder:"Username",required:"" %>
            <%= password_field_tag 'password','', class: 'form-control',placeholder:"Password",required:"" %>

            <% if flash[:alert] %>
                <div class="alert alert-danger">
                  <p><i class="fa fa-warning"></i>  <%= flash[:alert] %></p>
                </div>
            <% end %>
            <!-- Change this to a button or input when using this as a form -->
            <button class="btn btn-default submit">Login</button>
            <a class="reset_pass" href="#">Lost your password?</a>
            <div class="clearfix"></div>

            <div class="separator">

              <div class="clearfix"></div>
              <br />

              <div>
